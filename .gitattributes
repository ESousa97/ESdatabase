# Auto detect text files and perform LF normalization
* text=auto

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# JSON
*.json text eol=lf

# CSS/SCSS
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# HTML
*.html text eol=lf
*.htm text eol=lf

# Markdown
*.md text eol=lf
*.mdx text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Config files
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg text eol=lf
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary

# Lock files - don't diff
package-lock.json -diff
pnpm-lock.yaml -diff
yarn.lock -diff

# Linguist overrides for GitHub statistics
*.scss linguist-detectable=false
*.css linguist-detectable=false
